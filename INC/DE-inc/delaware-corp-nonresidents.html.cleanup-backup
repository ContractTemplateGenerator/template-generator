paypal.Buttons({
  style: { layout: 'vertical', color: 'blue', shape: 'rect', label: 'pay', height: 40 },
  createOrder: function(data, actions) {
    return actions.order.create({
      purchase_units: [{ description: 'DE C-Corp Foreign Founder Starter', amount: { value: '1200.00' } }]
    });
  },
  onApprove: function(data, actions) {
    return actions.order.capture().then(function(details) {
      alert('Thank you, ' + details.payer.name.given_name + '! I will contact you within 24 hours to begin your Delaware C-Corp formation.');
    });
  }
}).render('#paypal-button-starter');

