<script>
// Tab switching
function switchTab(tabName) {
  document.querySelectorAll('.tab-content').forEach(tab => {
    tab.classList.remove('active');
  });

  document.querySelectorAll('.tab-button').forEach(button => {
    button.classList.remove('active');
  });

  document.getElementById(tabName + '-tab').classList.add('active');
  event.target.classList.add('active');

  window.scrollTo({ top: 0, behavior: 'smooth' });
}

// Accordion toggle
function toggleAccordion(header) {
  const body = header.nextElementSibling;
  const isExpanded = body.classList.contains('expanded');

  // Close all accordions
  document.querySelectorAll('.accordion-body.expanded').forEach(item => {
    item.classList.remove('expanded');
    item.previousElementSibling.classList.remove('active');
  });

  // Open clicked accordion if it wasn't open
  if (!isExpanded) {
    body.classList.add('expanded');
    header.classList.add('active');
  }
}

// Intake form submission
function handleIntakeSubmit(event) {
  event.preventDefault();

  const formData = new FormData(event.target);
  const data = Object.fromEntries(formData.entries());

  const subject = encodeURIComponent(`DE C-Corp Non-Resident Intake - ${data.country}`);
  const body = encodeURIComponent(`
Delaware C-Corporation for Non-Resident - Confidential Intake

CLIENT INFORMATION:
Name: ${data.firstName} ${data.lastName}
Email: ${data.email}
Phone: ${data.phone}
Country of Residence: ${data.country}
Citizenship: ${data.citizenship}

BUSINESS DETAILS:
Business Type: ${data.businessType}
Proposed Corp Name: ${data.corpName || 'To be determined'}
Number of Founders: ${data.founderCount}
Fundraising Plans: ${data.fundraising}
Existing Entity: ${data.existingEntity}
U.S. Tax Treaty: ${data.treaty}
U.S. Revenue Percentage: ${data.usRevenue}
Has SSN/ITIN: ${data.hasSSN}

SERVICE PACKAGE:
${data.package}

BUSINESS DESCRIPTION & GOALS:
${data.businessDescription || 'Not provided'}

SPECIFIC QUESTIONS/CONCERNS:
${data.questions || 'None specified'}
  `);

  window.location.href = `mailto:owner@terms.law?subject=${subject}&body=${body}`;

  alert('Thank you! Your confidential intake form has been prepared. Please send the email that opened, or copy the information and email it to owner@terms.law. I will respond within 24 hours with a consultation proposal.');
}

