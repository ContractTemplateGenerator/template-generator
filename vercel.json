{
  "version": 2,
  "cleanUrls": true,
  "trailingSlash": true,
  "routes": [
    {
      "src": "/chat-widget/(.*)",
      "dest": "/chat-widget/$1"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    }
  ],
  "headers": [
    {
      "source": "/clients/(.*)",
      "headers": [
        { "key": "X-Robots-Tag", "value": "noindex, nofollow, noarchive" },
        { "key": "Cache-Control", "value": "private, no-cache, no-store, must-revalidate" }
      ]
    }
  ]
}


