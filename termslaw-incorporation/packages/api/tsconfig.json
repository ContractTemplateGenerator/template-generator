{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "module": "ESNext",
    "moduleResolution": "Node",
    "declaration": true,
    "baseUrl": "./",
    "paths": {
      "@termslaw/templates": ["../templates/src"],
      "@termslaw/templates/*": ["../templates/src/*"],
      "@termslaw/state-data": ["../state-data/src"],
      "@termslaw/state-data/*": ["../state-data/src/*"]
    }
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules"]
}
